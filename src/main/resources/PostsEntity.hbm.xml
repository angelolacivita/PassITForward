<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.gc.models.PostsEntity" table="posts" schema="PassITForward">
        <id name="postId">
            <column name="postID" sql-type="int(10) unsigned"/>
        </id>
        <property name="userId">
            <column name="userID" sql-type="int(10) unsigned"/>
        </property>
        <property name="postTitle">
            <column name="postTitle" sql-type="varchar(255)"/>
        </property>
        <property name="postDescription">
            <column name="postDescription" sql-type="mediumtext"/>
        </property>
        <property name="languageId">
            <column name="languageID" sql-type="int(10) unsigned"/>
        </property>
    </class>
</hibernate-mapping>